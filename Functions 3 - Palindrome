// checks if a number is palindrome or not

int main() {
    void palindrome();
    palindrome();
    
}

void palindrome(int a,int total) {
    
    total = 0;
    printf("Enter a number:");
    scanf("%d",&a);
    int b = a;
    while(a!=0) {
        
        int b = a%10;
        a = a/10;
        total = total*10 + b;
    }
    if(total == b) {
        printf("This number is a palindrome");
    } 
    else{
        printf("This number is not a palindrome");
    }
    
}
