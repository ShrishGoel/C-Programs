// Calculates the total markes in three subjects using functions

int main() {
    int a,b,c;
    printf("Enter the marks of three subjects:");
    scanf("%d%d%d",&a,&b,&c);
    
    int doTotal(int a, int b, int c);
    int total = doTotal(a,b,c);
    printf("The total is: %d\n",total);
    int doPer(int total);
    int per = doPer(total);
    printf("The percentage is: %d%",per);
}

int doTotal(int a, int b, int c) {
    int total = a + b + c;
    return total;
}

int doPer(int total) {
    int per = total * 100 / 300;
    return per;
}
