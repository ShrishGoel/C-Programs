#include <stdio.h>

// Program to calculate the sum of digits using loops and objects from class stdio.h

int main() {


    int digits;
    int number = 0;
    int b = 0; 
    int a = 0; 
   
   
    printf("Enter the number of digits you are going to enter:");
    scanf("%i",&digits);
    
    printf("Enter the number:");
    scanf("%i",&number);

   for (int x = 0; x < digits; x++) {
       a = number%10;
       number = number/10;
       b = a + b;
}
    
    printf("The sum of the digits is: %d",b);
}


