// Makes a cool pattern using nested loops
int main ()
{
  int a = 49;
  int b = 42;
  int c = 5;
  int d = 0;


  for (int x = 1; x <= 6; x++)
    {
      for (int y = 1; y <= c; y++)
	{

	  printf ("%c", b);

	}
      for (int z = 1; z <= d; z++)
	{
	  if (1 == 1)
	    {
	      printf ("%c", a);
	      a = a + 1;
	    }
	}
      printf ("\n");
      a = 49;
      c = c - 1;
      d = d + 1;
    }
}


