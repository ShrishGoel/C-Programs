// Finds the sum of odd and even numbers until a number entered by the user
int main() {
    
    int N;
    int odd= 0;
    int even = 0;
    
    printf("Enter the N:");
    scanf("%d",&N);
    
    for (int x = 0; x <= N; x++) {
        
        if (x%2 == 0) {
            even = even + x;
        }
        
        else if (x%2 != 0) 
            odd = odd + x;
        
    }
    printf("The sum of even numbers is:%d \nThe sum of odd numbers is:%d",even,odd);
    
}


