// Program to calculate the greatest number using conditional if and else

int main() {
    
    float a,b,c,d;
    printf("Enter four numbers:");
    scanf("%f%f%f%f",&a,&b,&c,&d);

    float max = (a > b? a > c? a > d? a : d: c > d?c : d : b > c? b > d?b : d : c > d?c :d);
    
    printf("The max number is: %f",max);
    
    
    
    
}


