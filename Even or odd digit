//Finds the number of even and odd digts in a number
int main() {
    int n,digit,even = 0,odd = 0;
    printf("Enter the number:");
    scanf("%d",&n);
    
    while(n!=0) {
        digit = n%10;
        n = n/10;
        if(digit%2 == 0) {
            even++;
            
        }
        else if (digit%2 != 0) {
            odd++;
        }
    }
        printf("The total number of even digits are: %d \n",even);
        printf("The total number of odd digits are: %d",odd);
    
}

